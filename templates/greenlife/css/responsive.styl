@media only screen and (max-width:  1280px)
	.inner
		width auto
	#main 
		.item-page, .blog, .text404, .blog-blog, .item-page-blog
			width auto

			.info-right
				
				.botones
					
					right 0
				.info 
					padding 1em
			.span4
				width auto
				
		.b2jcontainer
			
			width auto !important
			h2
				margin 0

	

@media only screen and (max-width: 800px)
	#main-header
		#logo
			margin-top 10px
			width 203px

		.right-info
			#menu
				font-size 12px
			.icon-trip
				display none
			#redes
				width auto
			
	#main 
		#tours, .item-page_tours_home, .blog-featured_tours_home
			position static
			ul 
				li 
					position static
					width 100%
					left 0 !important
					display block
					height 500px !important

					.tour-info
						position relative
						width 70%
						margin 0 auto
						right 0  
						h1
							font-size 18px
						p 
							font-family verdana
							line-height 18px
							font-size 13px
					.tour-title
						position relative
						width 100%
						top 100px
						padding .5em

						h1
							font-size 18px
						p
							font-size 13px
		.item-page
			.main-info
				width 98%
			.info-right
				width 348px !important
					
				.botones
					margin-left -15px
					right auto !important
				.info 
					padding 1em


@media only screen and (max-width:  640px)
	#main-header
		#logo
			margin-top 5px
			width 160px
			
		.right-info
			float none

			#menu
				display none
			.idiomas
				
				margin-top 10px
				margin-bottom 5px
				
			#redes
				//width 200px
				margin-top 10px
				margin-bottom 10px

			#btn-reserve
				padding .5em
				font-size 16px
				
			#btn_nav
				position absolute
				top 75px
				left 5px
				padding 7px 10px 8px 8px
				background $amarillo 
				background-size 12px 9px
				display block
				cursor pointer
				font-size 14px

				span
					margin-right 5px
			#menu 
				margin-left 0
				top 90px
				left 0
				width 100%
				position absolute
				z-index 20
				background $naranja
				text-align left
				display none

				ul 
					padding 0
					margin 0

					li 
						//width 95%
						float none
						//border-bottom 1px solid #FFF
						background-size 13px 12px
						border-right none 

						a, span 
							padding 5px 5px 3px 5px
							background-position 9px 9px
							color #fff
						.active
							background-color transparent
							color #fff
			#dialog
				width 230px

				.column1,.column2
					display block
					width 100%
			.window
				margin-bottom 100px
				top 15px
				position relative

			.chosen-choices
				width 230px !important
	#main
		.item-page
			
			.info-right
									
				.info 
					article
						img
							height 190px
							//width 50%

	