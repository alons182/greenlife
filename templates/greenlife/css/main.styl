
@import "nib"
@import "chosen.styl"
@import "iconos.styl"



$lima = #8bc543
$amarillo = #fcb811
$verde = #86b340
$verde2 = #20764b
$naranja = #f26522
body
	background #f0efed
	color #333
	font normal 14px georgia,sans-serif
	height 100%
	margin 0
	overflow-y scroll
	padding 0
	position relative
	background-attachment fixed
	background-color transparent
	background-position center  center
	background-repeat no-repeat, no-repeat 
	background-size cover, cover

.bgid-102, .bgid-105, .bgid-117, .bgid-118, .bgid-119, .bgid-120, .bgid-121,.bgid-122,.bgid-123,.bgid-124,.bgid-125,.bgid-126,.bgid-127,.bgid-129,.bgid-140,
.bgid-104,.bgid-130,.bgid-131,.bgid-132,.bgid-133,.bgid-134,.bgid-135,.bgid-136,.bgid-137,.bgid-138,.bgid-139
	background-image url('../img/t1.jpg') 

.btn
	background $amarillo
	padding .5em
	text-align center
	text-transform uppercase
	box-shadow 0 3px 5px rgba(0,0,0,0.5),0 0 1px rgba(0,0,0,0.5),inset 0 0 1px 1px rgba(255,255,255,0.2),inset 0 1px 0 rgba(255,255,255,0.2),inset 0 -1px 2px rgba(0,0,0,0.05)
	font-size 14px
	font-weight bold
	&:hover
		background $verde

a, a:visited
	color #FFF
	text-decoration none
p 
	margin 0 0 20px


.inner
	margin 0 auto
	width 1280px

#main-header
	background url('../img/bg.jpg') repeat #FFF
	color #fff
	display block
	height 110px
	position relative
	box-shadow 0 5px 5px rgba(0,0,0,0.5),0 0 5px rgba(0,0,0,0.5),inset 0 0 1px 1px rgba(255,255,255,0.2),inset 0 1px 0 rgba(255,255,255,0.2),inset 0 -1px 2px rgba(0,0,0,0.05)
	z-index 500
	#logo
		float left
		width 260px

		a 
			display block

			img 
				width 95%

	.right-info
		float right
		text-align right 

		#redes, #btn-reserve, .idiomas,.custom_reserve
			display inline-block
			vertical-align top
		#redes
			width 90px
			margin-top 20px
			margin-right 10px
			margin-bottom 15px
			a
				margin-right .2em
				background $verde
				padding .5em
				font-size 1.2em
				&:hover
					background $naranja
		.idiomas
			width 130px
			margin-top 20px
			margin-right 0px
			margin-bottom 15px
			color $verde

			a
				background $verde
				color #FFF
				padding .3em
				margin-right 5px

				&:hover
					background $naranja


		#btn-reserve
			
			background $verde
			padding 1em
			text-align center
			text-transform uppercase
			box-shadow 0 3px 5px rgba(0,0,0,0.5),0 0 1px rgba(0,0,0,0.5),inset 0 0 1px 1px rgba(255,255,255,0.2),inset 0 1px 0 rgba(255,255,255,0.2),inset 0 -1px 2px rgba(0,0,0,0.05)
			font-size 18px
			font-weight bold
			//width 200px
			&:hover
				background $naranja
		
		.column1, .column2
			display inline-block
			vertical-align top
			width 45%
		.column1
			margin-right 40px
		h1
			color $naranja
			//font-family 'Lato', sans-serif
			font-size 24px
			margin-bottom 10px
			margin-top 0
			text-transform capitalize
			text-align left

		p 
			margin-bottom 6px
			margin-top 0
			//#formulario, #formularioC
				
		label
			display inline-block
			font-size 14px
			margin-bottom 2px
			color $verde2

		label.error
			color $naranja
		
		input[type="text"],input[type="email"],textarea, select
			appearance none
			background-color #fff 
			background-image linear-gradient(#eee 1%, #fff 15%) 
			border 1px solid #AAA
			color #444
			width 100%
			height 23px
			box-shadow 0 0 3px #fff inset,0 1px 1px rgba(0,0,0,0.1)
		textarea
			height auto
		
		
		button,input[type="submit"]
			background $naranja
			border none
			clear both
			color white
			cursor pointer
			float right
			font-size 12px
			height 26px
			margin-right 4px
			width 80px

		

		.mensaje
			margin-top 15px
			text-align left
			span
				border-radius 5px
				padding 0.5em
				width 85%
			.ok
				background $verde
				border 1px solid #d6e9c6
			.error
				background $naranja
				border 1px solid #eed3d7

		#dialog
			//border-bottom 5px solid $naranja
			width 450px

			.close
				background $verde
		.window
			background url('../img/bg.jpg') repeat #FFF
			display none
			padding 20px
			position fixed
			top 120px
			z-index 9999

			.close
				color white
				padding 6px 6px 6px 6px
				position absolute
				right 10px
				text-decoration none
				top 16px
				border-radius 5px

		#btn_nav
			display none
		#menu
			ul 
				li 
					display inline-block
					vertical-align top
					padding .3em 1em
					border-right 1px solid $verde 

					a, span 
						color $verde2 
						display block
						text-transform uppercase
						&:hover
							color $amarillo
					.nav-child
						display none
				.active a
					 color $amarillo
				.last 
					border-right none
#main 
	#tours, .item-page_tours_home, .blog-featured_tours_home
		min-height 100%
		overflow hidden
		display block
		position relative
		
		ul 
			margin 0
			padding 0
			list-style none
			height 100%
			overflow hidden
			
			li 
				position absolute
				list-style-type none
				padding 0
				margin 0
				height 100%
				width 80%
				cursor pointer
				background-position center top
				background-repeat no-repeat
				background-size cover
				/*-webkit-transition all 0.5s;
				-moz-transition all 0.5s
				-ms-transition all 0.5s
				-o-transition all 0.5s
				transition all 0.5s*/
				.tour-info
					padding 1em
					position absolute
					top 10%
					right 15%
					background rgba(242,101,34,0.9)
					width 40%
					color #fff
					
													
					p 
						font-family verdana
						line-height 24px
				
				.tour-title
					padding 1em
					position absolute
					width 25%
					bottom 20%

					h1
						color #fff
						font-size 24px
					p
						color #faf390
						font-size 16px
			#t1
				background-image url('../img/t1.jpg')
				z-index 1
				.tour-title 
					background rgba(70,158,65,0.8)
				
			#t2
				background-image url('../img/t2.jpg')
				z-index 20
				left 25%
				.tour-title 
					background rgba(139,197,67,0.8)
			#t3
				background-image url('../img/t3.jpg')
				z-index 50
				left 50%
				.tour-title
					background rgba(32,118,75,0.8)
			#t4
				background-image url('../img/t4.jpg')
				z-index 100
				left 75%
				.tour-title
					background rgba(252,184,17,0.8)

		.btn-more
			&:hover
				background $verde

	.item-page, .blog, .category-list
		margin 20px auto
		width 1280px
		background rgba(255,255,255,.9) //url('../img/bg.jpg') repeat
		padding 1em



		h1
			color $naranja
		h2 
			color $verde
		p 
			line-height 24px 
		.page-header
			h2
				color $naranja
				font-size 1.5em
		.main-info, .info-right
			display inline-block
			vertical-align top
		.main-info
			width 65%
			margin-right 10px
		.info-right
			width 30%
			.botones
				//float left
				position absolute
				ul
					
					margin 0
					padding 0
										

					li 
						//overflow auto
						background #CCC
						cursor pointer
						height 42px
						list-style none
						margin 5px 5px
						position relative
						border-radius 5px
					
					
							

						span 
							color #fff
							display block
							font-size 12px
							height 16px
							text-align center
							width 50px
						.icon-image, .icon-signup, .icon-notebook, .icon-coin, .icon-cart, .icon-users
							color rgba(255, 255, 255, 0.6)
							font-size 1.3em
							padding-bottom 5px
							padding-top 2px
					#btn-images
						background $amarillo 
					#btn-details
						background $verde
					#btn-rates
						background $verde2
					#btn-book
						background $naranja
			.info 
				float right
				background rgba(255,255,255,1) url('../img/bg.jpg') repeat
				width 80%
				padding 1em .8em 1em 2em
				min-height 200px
				line-height 24px
				
				article
					display none

					img 
						width 100%
						height 100%
					h3 
						color $naranja
					p 
						margin-bottom 5px
					strong
						color $verde
				article[data-id ="images"]
					display block
			
	
	.b2jcontainer
		margin 30px auto !important
		width 1280px !important
		background rgba(255,255,255,1) url('../img/bg.jpg') repeat !important
		padding 1em !important 
		color #333 !important

		h2 
			background $verde
		.controls
			line-height 24px
		.btn 
			background $naranja
	.blog
		.span4
			width 410px
			display inline-block
			vertical-align top
			margin .5em

		.items-more
			display none
		.pagination
			//background-color rgba(255,255,255,0.9)
			margin 1em 0
			clear both
			.counter 
				text-align center

			.pagination-list 
				margin 0 auto
				padding 0
				text-align center
				
				li 
					display inline-block
					vertical-align top
					a 
						background-color $naranja
						border-left-width 0
						border 1px solid #fff
						color #FFF
						float left
						line-height 18px
						padding 4px 12px
						text-decoration none

				.disabled a, .active a 
					color #999
			//width 640px
		
			

		

#main-footer
	position relative
	display block
	height 30px
	background url('../img/bg.jpg') repeat #222
	text-align center

	#copyright
		padding-top 5px
		a 
			color #333



// ESTILOS CHOSEN JQUERY
.chosen-single
	border-radius 0 !important
	background-color #fff !important
	background-image linear-gradient(#eee 1%, #fff 15%) !important
.chosen-choices
	box-shadow 0 0 3px #fff inset,0 1px 1px rgba(0,0,0,0.1)
	

	input[type="text"]
		color #999 !important
		height 13px !important
		width auto !important
.chosen-results
	color #999

.highlighted
	background-color $naranja !important
	background-image none !important
